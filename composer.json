{
  "name": "21pixels/wws",
  "type": "wordpress-extension",
  "description": "Worldline gateway for WooCommerce.",
  "require": {
    "worldline/sips-payment-sdk": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "*",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "scripts": {
    "lint:phpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "lint:phpcbf": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
